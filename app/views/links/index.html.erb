<h1>Links</h1>
<div class="jumbotron text-center">
  <p>
    To create a new link, fill out this form:
  </p>
  <%= form_for(:link, url: links_path(@link), method: :post) do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>

  <%= f.label :url %> <br>
  <%= f.url_field :url %> <br>

  <%= f.hidden_field :user_id, { value: current_user.id } %>
  <%= f.submit "Create Link"%>
  <% end %>
</div>

<div class="linked-list">
  <% @links.each do |link| %>
      <div class="link jumbotron" data-id=<%= link.id %> data-user=<%= current_user.id %> data-read="read" data-unread="unread" data-edit="edit">
        <table class="text-center" style="width:100%">
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Link</th>
            <th class="text-center">Has been read?</th>
            <th class="text-center">Options</th>
          </tr>
          <tr>
            <td><%= link.title %></td>
            <td><a href=<%= link.url %>>Click Here</a></td>
            <td><%= link.read %></td>
            <td>
              <% if link.read == "false" %>
                <!-- <%= link_to "Mark as Read", "/links/#{link.id}", method: :put %> -->
                  <button name='mark-read' class='mark-read btn btn-primary'>Mark as read</button>
                <% else %>
                <!-- <%= link_to "Mark as Unread", "/links/#{link.id}", method: :put %> -->
                  <button name='mark-unread' class='mark-unread btn btn-primary'>Mark as unread</button>
              <% end %>
            </td>
          </tr>
        </table><br>
        <%= link_to "Edit", edit_link_path(link), class: "btn btn-xs btn-default" %>
      </div>
  <% end %>
</div>
