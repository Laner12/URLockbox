<h1>Links</h1>
<div class="jumbotron text-center">
  <p>
    To create a new link, fill out this form:
  </p>
  <%= form_for(:link, url: links_path(@link), method: :post) do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>

  <%= f.label :url %> <br>
  <%= f.url_field :url %> <br>

  <%= f.hidden_field :user_id, { value: current_user.id } %>
  <%= f.submit "Create Link"%>
  <% end %>
</div>

<div class="jumbotron text-center">
  <div>
    <!-- View links by status: <button name='read' class='read btn btn-default'>Read</button> | <button name='unread' class='unread btn btn-default'>Unread</button> -->
    <table class="text-center" style="width:100%">
      <tr>
        <th>View links by:</th>
        <td><button name='read' class='read-status-filter btn btn-default'>Status is Read</button></td>
        <td><button name='unread' class='unread-status-filter btn btn-default'>Status is Unread</button></td>
        <td><button name='alphabetical' class='alphabetical btn btn-default'>Alphabetically</button></td>
        <td><input type="text" id="search-field" placeholder="Search"></td>
      </tr>
    </table>
  </div>
</div>

<div class="linked-list">
  <% @links.each do |link| %>
      <div class="link jumbotron" data-id=<%= link.id %> data-user=<%= current_user.id %> data-read="read" data-unread="unread" data-edit="edit">
        <table class="text-center" style="width:100%">
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Link</th>
            <th class="text-center">Has been read?</th>
            <th class="text-center">Options</th>
          </tr>
          <tr>
            <td class="link-title"><%= link.title %></td>
            <td class="link-url"><a href=<%= link.url %>><%= link.url %></a></td>
            <td class="link-status-<%= link.read %>"><%= link.read %></td>
            <td>
              <% if link.read == "false" %>
                  <button name='mark-read' class='mark-read btn btn-primary'>Mark as read</button>
                <% else %>
                  <button name='mark-unread' class='mark-unread btn btn-danger'>Mark as unread</button>
              <% end %>
            </td>
          </tr>
        </table><br>
        <%= link_to "Edit", edit_link_path(link), class: "btn btn-default" %>
      </div>
  <% end %>
</div>
